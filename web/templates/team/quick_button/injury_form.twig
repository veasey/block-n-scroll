{% extends "team/team_base.twig" %}

{% block title %}Block & Scroll - Rules - Team - {{ team.name }}{% endblock %}

{% block content %}

    <p class="breadcrumbs">
        <a href="/">Home</a> -
        <a href="/team">Teams</a> - 
        <a href="/team/view/all">All Teams</a> -
        <a href="/team/view/{{ team.id }}">{{ team.name }}</a> -
        Record Injury
    </p>

    <h2>Record Injury</h2>

    <form method="post" action="/team/quick/{{team.id}}/injury" class="form-horizontal">
        <div class="form-section">
            <div class="form-group">
                <label for="player_id">Choose a player:</label>
                <select name="player_id" id="player_id" required>
                    {% for player in players %}
                        <option value="{{ player.id }}">
                            {{ player.number }} - {{ player.name }}{% if player.position.name %} ({{ player.position.name }}){% endif %}
                        </option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label for="injury_roll">Select injury roll result:</label>
                <select name="injury_roll" id="injury_roll" required>
                    {% for num in 1..16 %}
                        <option value="{{ num }}">{{ num }}</option>
                    {% endfor %}
                </select>
            </div>
            <button type="submit">Submit</button>
        </div
    </form>

{% endblock %}