{% extends "team/team_base.twig" %}

{% block title %}Block &amp; Scroll - Team - Create{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="/css/02_rules_styles.css">
{% endblock %}

{% block content %}

    <p class="breadcrumbs">
        <a href="/">Home</a> -
        <a href="/team">Teams</a> - 
        <a href="/team/create">Create</a> -
        Choose Race
    </p>

    <h1>Choose Race</h1>
    
    <table id="positions-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th title="The higher the number, the harder to coach.">Tier</th>
            </tr>
        </thead>
        <tbody>
            {% for team in teams %}
            <tr data-hidden="{{ team.is_hidden ? 'true' : 'false' }}" class="{{ team.is_hidden ? 'hidden-team hidden' : '' }}">
                <td>
                    <a href="/team/create/{{ team.id }}" title="Create a team with the {{ team.name }}">
                        {{ team.name }}
                    </a>
                </td>
                <td>{{ team.description }}</td>
                <td>{{ team.tier }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="form-section">       
        <div class="form-group">
            <label for="hide_team_selector">Show Hidden Teams:</label>
            <select name="hide_team_selector" id="hide_team_selector" class="form-control">
                <option value="n">No</option>
                <option value="y">Yes</option>
                <option value="x">Exclusively</option>
            </select>
        </div>
    </div>

    <p>
        <b>Note:</b> Some teams may be marked as hidden. You can choose to display them using the selector above.
        Most leagues may choose to not use hidden teams, but they are available for custom games or special scenarios.
    </p>

    {% block scripts %}
        {{ parent() }}
        <script src="/js/rules/hide-team.js"></script>
    {% endblock %}

{% endblock %}