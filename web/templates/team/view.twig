{% extends "team/team_base.twig" %}

{% block title %}Block & Scroll - Rules - Team - {{ team.name }}{% endblock %}

{% block content %}

    <p class="breadcrumbs">
        <a href="/">Home</a> -
        <a href="/team">Teams</a> - 
        <a href="/team/view/all">All Teams</a> -
        <a href="/team/view/{{ team.id }}">{{ team.name }}</a>
    </p>

    <h2>{{ team.name }} [{{ team.status }}]</h2>
    <p class="team-description">{{ team.description }}</p>

    <div class="team-quick-buttons">
    {% if team.status == 'playing' %}
        <a href='/team/quick/{{ team.id }}/injury' class="quick-btn" title="Log Injury">ğŸ©¸ Player Injured</a>
        <a href='/team/quick/{{ team.id }}/casualty' class="quick-btn" title="Mark Casualty Caused">âœŠ Casualty Caused</a>
        <a href='/team/quick/{{ team.id }}/touchdown' class="quick-btn" title="Add Touchdown">ğŸ‰ Touch Down</a>
        <a href='/team/quick/{{ team.id }}/completion' class="quick-btn" title="Add Completion">ğŸ¤¾ğŸ»â€â™‚ï¸ Completion</a>
        <form action="/match/end" method="post">
            <input type="hidden" id="team_id" name="team_id" value="{{team.id}}" />
            <button class="quick-btn" title="Start Match">ğŸ End Match</button>
        </form>
    {% else %}
        <form action="/match/start" method="post">
            <input type="hidden" id="team_id" name="team_id" value="{{team.id}}" />
            <button class="quick-btn" title="Start Match">ğŸ‰ Start Match</button>
        </form>
    {% endif %}
    </div>

    <div class="team-header-grid">
        <div class="team-meta">
            <p><strong>Team Value:</strong> X Gold</p>      
            <p><strong>Race:</strong> {{ team.race.name }} <i>(Tier: {{ team.race.tier }})</i></p>
            <p><strong>Coach:</strong> {{ team.coach.name }}</p>
            <p><strong>League:</strong> {{ team.league.name }} </p>
            <p><strong>Treasury:</strong> {{ team.treasury|number_format }} Gold</p>      
        </div>
        <div class="team-meta">
            <p><strong>Rerolls:</strong> {{ team.rerolls|number_format }}</p>
            <p><strong>Cheerleaders:</strong> {{ team.cheerleaders|number_format }}</p>
            <p><strong>Assistant Coaches:</strong> {{ team.assistant_coaches|number_format }}</p>
            <p><strong>Fan Factor:</strong> {{ team.fan_factor|number_format }}</p>           
        </div>
    </div>

    <div class="team-header-grid">
        <div class="team-meta">
            <p><strong>Matches Played:</strong> <a href="/match/view/team/{{team.id}}">{{ team.allMatches|length }}</a></p>
        </div>
    </div>

    <h3>Players</h3>
    
    {% if players|length == 0 %}
        <p><strong>This team has no players!</strong></p>
    {% else %}
        <table id="positions-table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Position</th>
                    <th>MA</th>
                    <th>ST</th>
                    <th>AG</th>
                    <th>PA</th>
                    <th>AV</th>
                    <th>Skills</th>
                    <th>SPP</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                {% for player in players %}
                <tr>
                    <td>{{ player.number }}</td>
                    <td><a href="/player/view/{{player.id}}">{{ player.name }}</a></td>
                    <td><a href="/rules/position/{{player.position.id}}">{{ player.position.name }}</a></td>
                    <td>{{ player.ma }}</td>
                    <td>{{ player.st }}</td>
                    <td>{{ player.ag }}</td>
                    <td>{{ player.pa }}</td>
                    <td>{{ player.av }}</td>
                    <td>{% include 'partials/skill_tags.twig' with {'skills': player.position.skills} %}</td>
                    <td>{{ player.spp }}</td>
                    <td>
                        {% if player.miss_next_game %}
                            <p><b>Miss next game</b></p>
                        {% else %}
                            {{ player.status }}
                        {% endif %}
                        {% if player.niggling_injury %}
                            <p><b>Niggling injury</b></p>
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}

    {% if showManagementButtons == true %}
        <p>
            <center>
                {% if team.status != 'retired' %}
                    <button onclick="window.location.href='/team/edit/{{ team.id }}'">Edit Team Details</button>
                    <button onclick="window.location.href='/team/hire/{{ team.id }}'">Hire / Fire Staff</button>
                    <button onclick="window.location.href='/team/retire/{{ team.id }}'">Retire</button>       
                {% else %}
                    <button onclick="window.location.href='/team/unretire/{{ team.id }}'">Bring Out of Ritirement</button>       
                    <button onclick="window.location.href='/team/delete/{{ team.id }}/confirm'">Delete</button>
                {% endif %}                         
            </center>
        </p>
    {% endif %}

    {% include 'partials/special_rules.twig' with {'special_rules': team.race.special_rules, 'regional_rules': team.race.regional_rules} %}

{% endblock %}