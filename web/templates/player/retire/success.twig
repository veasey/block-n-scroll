{% extends "base.twig" %}

{% block title %}Block &amp; Scroll - Retiring {{ player.name }}{% endblock %}

{% block content %}

    <p class="breadcrumbs">
          <a href="/">Home</a> -
        <a href="/team">Teams</a> - 
        <a href="/team/view/all">All Teams</a> -
        <a href="/team/view/{{ player.team.id }}">{{ player.team.name }}</a> -
        <a href="/player/view/{{ player.id }}">{{player.name}}</a> -
        Retired
    </p>

    <h2>{{ player.name }} is no longer part of {{ player.team.name }}</h2>
    
    {% set retirementMessages = [
        "Fired faster than a halfling from a treeman's hand!",
        "They’ve hung up their boots — or had them taken off by force.",
        "Management says 'budget cuts', player says 'good riddance'.",
        "Sent packing with a handshake and a boot.",
        "One less mouth to feed, one more seat on the bench.",
        "Turfed out like last week’s meat pie.",
        "No more games, just tales of 'back in my day...'.",
        "Retired — either by choice or by coach's wrath.",
        "Gone but not forgotten... until the next kickoff.",
        "Off the team sheet and into the history books — barely."
    ] %}


    {% set messages = retirementMessages %}

    <p class="retirement-message" style="font-style: italic; font-size: 1.2em; margin-top: 1em;">
        <strong>{{ random(messages) }}</strong>
    </p>

{% endblock %}
