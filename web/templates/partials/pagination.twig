 <nav class="pagination">
        
    {% if page > 1 %}
        <a href="?page={{ page - 1 }}">&laquo; Prev</a>
    {% endif %}

    {% for i in 1..totalPages %}
        {% if i == page %}
            <strong>{{ i }}</strong>
        {% else %}
            <a href="?page={{ i }}">{{ i }}</a>
        {% endif %}
    {% endfor %}

    {% if page < totalPages %}
        <a href="?page={{ page + 1 }}">Next &raquo;</a>
    {% endif %}
    
</nav>